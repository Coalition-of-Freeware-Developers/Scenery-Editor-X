# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = crlf

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
trim_trailing_whitespace = false

[*cpp]
indent_style = tab
indent_size = 4
end_of_line = crlf

[*h]
indent_style = tab
indent_size = 4
end_of_line = crlf

[*hpp]
indent_style = tab
indent_size = 4
end_of_line = crlf
